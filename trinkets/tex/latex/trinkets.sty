\newcounter{taskcounter}

\newcommand*{\task}[1][]{%
	\addtocounter{taskcounter}{1}%
	\noindent%
	\textbf{\textnumero\arabic{taskcounter}%
	\ifthenelse{\equal{#1}{}}{}{ (#1)}:} %
	\ignorespaces
}

\newcommand*{\answer}[1][]{%
	\textbf{Ответ\ifthenelse{\equal{#1}{}}{}{ (#1)}:} %
	\ignorespaces
}

\newcommand*{\solution}[1][]{%
	\textbf{Решение\ifthenelse{\equal{#1}{}}{}{ (#1)}: }%
	\ignorespaces
}

