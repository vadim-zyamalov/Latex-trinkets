\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{praeambel}[2025/03/26 My personal preamble]

\RequirePackage{iftex}

\newif\ifpraeambel@beamer
\praeambel@beamerfalse
\newif\ifpraeambel@markdown
\praeambel@markdownfalse

\def\praeambel@language{russian}
\def\praeambel@nativelng{russian}

\DeclareOption{beamer}{%
	\praeambel@beamertrue
	\praeambel@markdownfalse
}
\DeclareOption{markdown}{%
	\praeambel@beamerfalse
	\praeambel@markdowntrue
}
\DeclareOption*{\edef\praeambel@language{\CurrentOption}}
\ProcessOptions\relax

% --------------------------- %
% Языковые настройки и шрифты %
% --------------------------- %
\ifpraeambel@markdown
\else
	\iftutex
		\RequirePackage{polyglossia}
		\ifx\praeambel@language\praeambel@nativelng
			\setdefaultlanguage{russian}
			\setotherlanguage{english}
		\else
			\setdefaultlanguage{\praeambel@language}
			\setotherlanguage{russian}
		\fi

		\defaultfontfeatures{Ligatures={TeX}}
		\setmainfont{PT Astra Serif}
		\setsansfont{PT Astra Sans}
		\setmonofont{Iosevka}

		\newfontfamily{\cyrillicfont}{PT Astra Serif}
		\newfontfamily{\cyrillicfontsf}{PT Astra Sans}
		\newfontfamily{\cyrillicfonttt}{Iosevka}

		\ifx\praeambel@language\praeambel@nativelng
		\else
			\expandafter\newfontfamily\csname\praeambel@language font\endcsname{PT Astra Serif}
			\expandafter\newfontfamily\csname\praeambel@language fontsf\endcsname{PT Astra Sans}
			\expandafter\newfontfamily\csname\praeambel@language fonttt\endcsname{Iosevka}
		\fi
	\fi
	\ifpdftex
		\RequirePackage{cmap}
		\RequirePackage[utf8]{inputenc}
		\RequirePackage[T2A,T1]{fontenc}
		\RequirePackage[english, russian]{babel}
		\RequirePackage{paratype}
	\fi
\fi

\RequirePackage{csquotes}
\RequirePackage{bookmark}
\RequirePackage{parskip}
\RequirePackage{moresize}

% ------------------------------- %
% Математические шрифты и символы %
% ------------------------------- %
\RequirePackage{amsmath}
\RequirePackage{amssymb}

\ifpraeambel@beamer
\else
	\RequirePackage{amsthm}
	\RequirePackage{nicefrac}

	\theoremstyle{definition}
	\newtheorem*{theorem}{Теорема}
	\newtheorem{example}{Пример}
\fi

% https://tex.stackexchange.com/q/552864/283103
\let\normalunderbrace=\underbrace
\RequirePackage{mathtools}
\let\underbrace=\normalunderbrace

\iftutex
	\RequirePackage{unicode-math}
	\defaultfontfeatures{Scale=MatchLowercase}
	\defaultfontfeatures[\rmfamily]{Ligatures=TeX,Scale=1}
\fi

% ------------------------------ %
% Геометрия страницы и коробочки %
% ------------------------------ %
\ifpraeambel@beamer
	\RequirePackage{adjustbox}
\else
	\RequirePackage[left=3cm, right=1.5cm, top=2cm, bottom=2cm]{geometry}
	\RequirePackage{setspace}
	\onehalfspacing

	\setlength{\parindent}{12.5mm}
	\righthyphenmin=2

	\widowpenalty=10000
	\tolerance=1000

	\RequirePackage{adjustbox}
	\RequirePackage[most]{tcolorbox}
\fi

% ------ %
% Списки %
% ------ %
\ifpraeambel@beamer
\else
	\RequirePackage{enumitem}
	\AddEnumerateCounter{\Asbuk}{\russian@alph}{Щ}
	\AddEnumerateCounter{\asbuk}{\russian@alph}{щ}
\fi

\providecommand{\tightlist}{%
	\setlength{\itemsep}{0pt}\setlength{\parskip}{0pt}}

% ------ %
% Прочее %
% ------ %
\RequirePackage{xcolor}

\IfFileExists{microtype.sty}{
	\RequirePackage[]{microtype}
	\UseMicrotypeSet[protrusion]{basicmath} % disable protrusion for tt fonts
}{}

\ifpraeambel@beamer
\else
	% Подзаголовок на титульном листе
	\RequirePackage{etoolbox}
	\providecommand{\subtitle}[1]{
		\apptocmd{\@title}{\par {\large #1 \par}}{}{}
	}
\fi

% ----------------- %
% Ссылки и закладки %
% ----------------- %
\RequirePackage{bookmark}
\IfFileExists{xurl.sty}{\RequirePackage{xurl}}{} % add URL line breaks if available
\urlstyle{same}

\RequirePackage[
	backend=biber,
	bibstyle=gost-authoryear-min,
	citestyle=gost-authoryear,
	movenames=false
]{biblatex}

\DeclareFieldFormat{url}{%
	\mkbibacro{URL}\addcolon\space
	\href{#1}{\nolinkurl{\thefield{urlraw}}}}

