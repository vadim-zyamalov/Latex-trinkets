\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{aufgaben}[2025/09/18 LaTeX package for easy tasks numbering]

\newif\if@taskonly
\@taskonlyfalse

\DeclareOption{taskonly}{\@taskonlytrue}
\ProcessOptions\relax

\RequirePackage{enumitem}
\RequirePackage{calc}

%%% Упражнения %%%

\newlist{tasks}{enumerate}{3}
\setlist[tasks,1]{%
	label={\textbf{№\arabic{chapter}.\arabic*:}},
	ref={\arabic{chapter}.\arabic*},
	align=left,
	labelindent=0pt,
	labelwidth=\widthof{№\ref{enum-\EnumitemId}:},
	leftmargin={\labelwidth+\itemindent},
	after={\label{enum-\EnumitemId}}
}
\setlist[tasks,2]{%
	label={\arabic*.},
	ref={(\arabic*)},
	align=left,
	labelindent=0pt
}
\setlist[tasks,3]{%
	label={\asbuk*.},
	ref={(\asbuk*)},
	align=left,
	labelindent=0pt,
}

\if@taskonly
\else
	\newcommand*{\answer@text}[1][]{%
		Ответ%
		\ifthenelse{\equal{#1}{}}%
		{}%
		{ (#1)}: %
	}

	\newcommand*{\solution@text}[1][]{%
		Решение%
		\ifthenelse{\equal{#1}{}}%
		{}%
		{ (#1)}: %
	}

	\newcommand*{\answer}[1][]{%
		\if@noskipsec\leavevmode\fi
		\def\@svsechd{%
			\textbf{\answer@text[#1]}}%
		\@xsect{-1em}%
	}

	\newcommand*{\solution}[1][]{%
		\if@noskipsec\leavevmode\fi
		\def\@svsechd{%
			\textbf{\solution@text[#1]}}%
		\@xsect{-1em}%
	}
\fi

\endinput
