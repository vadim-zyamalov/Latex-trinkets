\RequirePackage{ifthen}

\newcounter{taskcounter}
\renewcommand\thetaskcounter{\arabic{taskcounter}}

%\DeclareOption{chapter}{\counterwihin{taskcounter}{chapter}}
%\DeclareOption{section}{\counterwihin{taskcounter}{section}}
\DeclareOption*{\counterwithin{taskcounter}{\CurrentOption}}
\ProcessOptions\relax

%%% Упражнения %%%

% Взято отсюда:
% https://tex.stackexchange.com/a/531040

\newcommand*{\task@text}[1][]{%
	\textnumero\thetaskcounter%
	\ifthenelse{\equal{#1}{}}%
	{}%
	{ (#1)}: %
}

\newcommand*{\answer@text}[1][]{%
	Ответ%
	\ifthenelse{\equal{#1}{}}%
	{}%
	{ (#1)}: %
}

\newcommand*{\solution@text}[1][]{%
	Решение%
	\ifthenelse{\equal{#1}{}}%
	{}%
	{ (#1)}: %
}

\newcommand*{\task}[1][]{%
	\refstepcounter{taskcounter}%
	\if@noskipsec\leavevmode\fi
	\def\@svsechd{%
		\textbf{\task@text[#1]}}%
	\@xsect{-1em}%
}

\newcommand*{\answer}[1][]{%
	\if@noskipsec\leavevmode\fi
	\def\@svsechd{%
		\textbf{\answer@text[#1]}}%
	\@xsect{-1em}%
}

\newcommand*{\solution}[1][]{%
	\if@noskipsec\leavevmode\fi
	\def\@svsechd{%
		\textbf{\solution@text[#1]}}%
	\@xsect{-1em}%
}

\endinput
